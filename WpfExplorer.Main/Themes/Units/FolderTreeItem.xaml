<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:units="clr-namespace:WpfExplorer.Main.UI.Units">
    <Style TargetType="{x:Type units:FolderTreeItem}">
        <Setter Property="Foreground" Value="#FF33FF" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type units:FolderTreeItem}">
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <TextBlock VerticalAlignment="Center" Margin="10"
                                   Text="{Binding Name}" />
                        <TextBlock VerticalAlignment="Center" Text="{Binding FullPath}" />
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>